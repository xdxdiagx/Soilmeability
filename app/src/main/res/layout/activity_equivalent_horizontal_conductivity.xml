<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_brown_bg"
    android:layout_weight="2"
    tools:context=".EquivalentHorizontalConductivityActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_back_equivalent_horizontal_conductivity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            />

        <TextView
            android:id="@+id/text_view_equivalent_horizontal_conductivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Equivalent Horizontal Conductivity"
            android:textColor="@android:color/white"
            android:textAlignment="center"

            android:textSize="36sp" />

        <TextView
            android:id="@+id/text_view_Kh"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_equivalent_horizontal_conductivity"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="141dp"
            android:layout_marginEnd="298dp"
            android:layout_marginRight="298dp"
            android:text="Kh (cm/sec)"
            android:textAlignment="center"
            android:textColor="@android:color/black"

            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_text_Kh_2"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_equivalent_horizontal_conductivity"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="118dp"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:hint="Enter the value for Kh"
            android:inputType="numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/text_view_H"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_Kh_2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_marginStart="23dp"
